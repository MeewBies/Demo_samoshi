<Window x:Class="Demo_samoshi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo_samoshi"
        mc:Ignorable="d"
        Title="Authorization" Height="450" Width="200">
    <Grid>

        <Grid Background="#FFC3C3C3"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Логин" HorizontalAlignment="Center"/>
            <TextBox Name="tb_lg" Width="100" Height="25" Margin="5"/>
            <TextBlock Text="Пароль" HorizontalAlignment="Center"/>
            <TextBox Name="tb_ps" Width="100" Height="25" Margin="5"/>
            <Button Click="Button_Click" Background="#FFA7F9FF" Content="Войти" Width="100" Height="25" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
